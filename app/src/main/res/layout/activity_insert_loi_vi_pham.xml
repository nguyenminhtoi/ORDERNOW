<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyan_color"
    tools:context="com.minhtoi96.phanmemquanlythongtinviphamgiaothong.InsertLoiViPhamActivity">
    <include layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                >
                <RelativeLayout
                    android:background="@drawable/border_create_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgAccount"
                        android:layout_marginLeft="5dp">
                        <EditText
                            android:id="@+id/edt_loi_vi_pham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Lỗi vi phạm"
                            android:maxLines="2"
                            android:imeOptions="actionDone"/>
                    </android.support.design.widget.TextInputLayout>
                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/imgAccount"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_loi_vi_pham"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
                <RelativeLayout
                    android:background="@drawable/border_create_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgPass"
                        android:layout_marginLeft="5dp">
                        <EditText
                            android:id="@+id/edt_nguoi_vi_pham"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tên người vi phạm"
                            android:maxLines="2"
                            android:imeOptions="actionDone"/>
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/imgPass"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_name"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="5dp"

                >
                <RelativeLayout
                    android:background="@drawable/border_create_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgSoGplx"
                        android:layout_marginLeft="5dp">
                        <EditText
                            android:id="@+id/edt_so_gplx"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Số giấy phép lái xe"
                            android:maxLines="2"
                            android:imeOptions="actionDone"/>
                    </android.support.design.widget.TextInputLayout>
                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/imgSoGplx"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_so_gplx"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgName">

                            <EditText
                                android:id="@+id/edt_bien_so_vi_pham"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Biển số vi phạm"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgName"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_bien_so" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgNgaySinh">

                            <EditText
                                android:id="@+id/edt_ngay_vi_pham"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Ngày vi phạm"
                                android:focusable="false"
                                android:imeOptions="actionDone"
                                android:inputType="datetime"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgNgaySinh"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_calendar" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgCMND">

                            <EditText
                                android:id="@+id/edt_noi_vi_pham"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nơi vi phạm"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgCMND"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_dia_chi" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgDiaChi">

                            <EditText
                                android:id="@+id/edt_can_bo"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Cán bộ xử phạt"
                                android:focusable="false"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgDiaChi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_police" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/imgSDT">

                            <EditText
                                android:id="@+id/edt_bien_phap_xu_phat"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Biện pháp xử phạt"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgSDT"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_phat_bo_sung" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgGT">

                            <EditText
                                android:id="@+id/edt_phat_bo_sung"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Phạt bổ sung"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgGT"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_luat" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgCV">

                            <EditText
                                android:id="@+id/edt_hinh_anh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Hình ảnh vi phạm"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgCV"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_picture" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    <Button
                        android:id="@+id/btn_insert_loi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thêm lỗi vi phạm"
                        android:textAllCaps="false"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/drawable_btn_create_account" />
                    <Button
                        android:id="@+id/btn_huy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hủy"
                        android:textAllCaps="false"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@drawable/drawable_btn_login" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
