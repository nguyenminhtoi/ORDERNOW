<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dashboard_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.ordernow.LoginActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">
   <LinearLayout
       android:id="@+id/toolbar_customize"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:layout_alignParentTop="true"
       android:background="@color/color_status">

      <include layout="@layout/toolbar_main" />
      <ScrollView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          >
         <LinearLayout
             android:id="@+id/layout"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/color_status"
             android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_status"
                android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/order"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:background="@color/color_while"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgOrder"
                      android:layout_width="105dp"
                      android:layout_height="90dp"
                      android:background="@drawable/ds_ban" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Order"
                      android:textColor="@color/red_color"
                      android:textSize="16dp" />
               </LinearLayout>
               <LinearLayout
                   android:id="@+id/doanh_thu"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@color/color_while"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgReport"
                      android:layout_width="105dp"
                      android:layout_height="90dp"
                      android:background="@drawable/doanh_so" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Doanh thu"
                      android:textColor="@color/red_color"
                      android:textSize="16dp" />
               </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_status"
                android:orientation="horizontal">

               <LinearLayout
                   android:id="@+id/ds_ban"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:background="@color/color_while"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgTable"
                      android:layout_width="105dp"
                      android:layout_height="90dp"
                      android:background="@drawable/ic_table" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Danh sách bàn"
                      android:textColor="@color/red_color"
                      android:textSize="15dp" />
               </LinearLayout>

               <LinearLayout
                   android:id="@+id/ds_mon"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@color/color_while"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgFood"
                      android:layout_width="105dp"
                      android:layout_height="90dp"
                      android:background="@drawable/ic_mon" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Danh sách món"
                      android:textColor="@color/red_color"
                      android:textSize="15dp" />
               </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/color_status"
                android:orientation="horizontal">
               <LinearLayout
                   android:id="@+id/ds_khach_hang"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:background="@color/color_while"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgCustomer"
                      android:layout_width="105dp"
                      android:layout_height="90dp"
                      android:background="@drawable/ds_khach" />

                  <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Khách hàng"
                      android:textColor="@color/red_color"
                      android:textSize="15dp" />

               </LinearLayout>
               <LinearLayout
                   android:id="@+id/ma_giam_gia"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="5dp"
                   android:layout_marginRight="5dp"
                   android:background="@color/color_while"
                   android:gravity="center"
                   android:orientation="vertical">

                  <ImageView
                      android:id="@+id/imgVoucher"
                      android:layout_width="105dp"
                      android:layout_height="90dp"
                      android:background="@drawable/ic_voucher" />

                  <TextView
                      android:id="@+id/textView"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_gravity="center"
                      android:text="Mã giảm giá"
                      android:textColor="@color/red_color"
                      android:textSize="16dp" />
               </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/quan_ly"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:background="@color/color_while"
                android:gravity="center"
                android:orientation="vertical">

               <ImageView
                   android:id="@+id/imgUser"
                   android:layout_width="105dp"
                   android:layout_height="90dp"
                   android:background="@drawable/ic_manager" />

               <TextView
                   android:id="@+id/textView2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_gravity="center"
                   android:text="Quản lý User"
                   android:textColor="@color/red_color"
                   android:textSize="16dp" />
            </LinearLayout>
         </LinearLayout>
      </ScrollView>
   </LinearLayout>
   </RelativeLayout>
   <include layout="@layout/info"/>
</android.support.v4.widget.DrawerLayout>