<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/cyan_color"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rv_bill"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/cyan_color"
            >
        <LinearLayout
            android:id="@+id/rv_food"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="match_parent"
            android:background="@drawable/background_item_staff"
            >
            <LinearLayout
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/img_food"
                    android:layout_margin="3dp"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_name_food"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="Mo패n"
                        android:textSize="20dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_note_food"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/grey_color"
                        android:layout_marginLeft="5dp"
                        android:text="Chu패 thi패ch"
                        android:textSize="15dp" />
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_price_food"
                        android:layout_marginLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black_color"
                        android:text="Gia패"
                        android:textSize="20dp" />

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp">
                <ImageView
                    android:id="@+id/ic_remove_food"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_remove_food" />
                <TextView
                    android:id="@+id/tv_number_food"
                    android:layout_width="30dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_color"
                    android:textSize="20dp"

                    />
                <ImageView
                    android:id="@+id/ic_add_food"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@drawable/ic_add_food" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>