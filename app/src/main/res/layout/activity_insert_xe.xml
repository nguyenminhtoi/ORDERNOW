<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cyan_color"
    tools:context="com.minhtoi96.phanmemquanlythongtinviphamgiaothong.InsertXeActivity">
    <include layout="@layout/toolbar" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="5dp"
                >
                <RelativeLayout
                    android:background="@drawable/border_create_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgAccount"
                        android:layout_marginLeft="5dp">
                        <EditText
                            android:id="@+id/edt_bien_so_xe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Biển số xe"
                            android:maxLines="2"
                            android:imeOptions="actionDone"/>
                    </android.support.design.widget.TextInputLayout>
                    <!-- ICON -->
                    <ImageView
                        android:id="@+id/imgAccount"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_bien_so"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                >
                <RelativeLayout
                    android:background="@drawable/border_create_order"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/imgPass"
                        android:layout_marginLeft="5dp">
                        <EditText
                            android:id="@+id/edt_ten_chu_xe"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Tên chủ xe"
                            android:maxLines="2"
                            android:imeOptions="actionDone"/>
                    </android.support.design.widget.TextInputLayout>
                    <ImageView
                        android:id="@+id/imgPass"
                        android:padding="8dp"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/ic_name"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgCMND">

                            <EditText
                                android:id="@+id/edt_dia_chi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Địa chỉ"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgCMND"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_dia_chi" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgDiaChi">

                            <EditText
                                android:id="@+id/edt_hieu_xe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Hiệu xe"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgDiaChi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_hieu_xe" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:layout_toRightOf="@+id/imgSDT">

                            <EditText
                                android:id="@+id/edt_dung_tich"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Dung tích"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgSDT"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_dung_tich" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgHangXe">

                            <EditText
                                android:id="@+id/edt_hang_xe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Hãng xe"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgHangXe"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_hang_xe" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgSoKhung">

                            <EditText
                                android:id="@+id/edt_so_khung"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Số khung"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgSoKhung"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_so_khung" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgSoMay">

                            <EditText
                                android:id="@+id/edt_so_may"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Số máy"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgSoMay"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_so_may" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgMauXe">

                            <EditText
                                android:id="@+id/edt_mau_xe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Màu xe"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgMauXe"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_mau_xe" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgLoaiXe">

                            <EditText
                                android:id="@+id/edt_loai_xe"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Loại xe"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgLoaiXe"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_loai_xe" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgSoNguoi">

                            <EditText
                                android:id="@+id/edt_so_nguoi"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Số người có thể chở"
                                android:inputType="number"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgSoNguoi"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_so_nguoi" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgNguonGoc">

                            <EditText
                                android:id="@+id/edt_nguon_goc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nguồn gốc xuất sứ"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>


                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgNguonGoc"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_quoc_tich" />

                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_create_order">

                        <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/imgGT">

                            <EditText
                                android:id="@+id/edt_ngay_dang_ky"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:focusable="false"
                                android:hint="Ngày đăng ký"
                                android:imeOptions="actionDone"
                                android:maxLines="2" />
                        </android.support.design.widget.TextInputLayout>

                        <!-- ICON -->
                        <ImageView
                            android:id="@+id/imgGT"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:padding="8dp"
                            android:src="@drawable/ic_calendar" />

                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp">
                    <Button
                        android:id="@+id/btn_insert_xe"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Thêm thông tin xe"
                        android:textAllCaps="false"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:textSize="18dp"
                        android:textColor="@color/white"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/drawable_btn_create_account" />
                    <Button
                        android:id="@+id/btn_huy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hủy"
                        android:textAllCaps="false"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:layout_marginTop="5dp"
                        android:textSize="18dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:textStyle="bold"
                        android:background="@drawable/drawable_btn_login" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical">

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
